{
  "manifest_version": 3,
  "name": "YouTube Shorts Skipper",
  "version": "1.0",
  "description": "Skip 10 seconds in YouTube Shorts using Right Arrow key.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://*.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/shorts/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}